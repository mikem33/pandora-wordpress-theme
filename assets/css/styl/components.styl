// define default values (best to put this in the default.styl file)  
$fontsize = 16
//$lineheight = 24
 
// Mixins
// It compares the given value to the base values and calculates the correct output
font-size($fontValue = $fontsize, $baseFontValue = $fontsize)
    font-size   $fontValue px
    font-size   ($fontValue / $baseFontValue) rem

// Center Object functions.
centerObject($horizontal = true, $vertical = true)
    if $horizontal and $vertical
        top 50%
        left 50%
        position absolute
        transform translate(-50%, -50%)
    else if $horizontal
        left 50%
        position absolute
        transform translateX(-50%)
    else if $vertical
        top 50%
        position absolute
        transform translateY(-50%)
        
centerObjectFlex($both = true, $vertical = true)
    display flex
    if $both
        align-items center
        justify-content center    
    else if $both == false and $vertical
        flex-direction column
        justify-content center

// Placeholder color
placeholder()
    &::-webkit-input-placeholder
        {block}
    &:-moz-placeholder
        {block}
    &::-moz-placeholder
        {block}
    &:-ms-input-placeholder
        {block}

// End of mixins

// Variables

darkgrey = #333
midgrey = #666

basetransition = 250ms linear
pseudotransition = 250ms ease-in-out

*,
*:before,
*:after
    box-sizing border-box
  
html
    font-size(16)

html,
button,
input,
select,
textarea
    color darkgrey

body
    line-height 1.4

::-moz-selection
    background darkgrey
    color white
    text-shadow none

::selection
    background darkgrey
    color white
    text-shadow none

hr
    display block
    height 1px
    border 0
    border-top 1px solid #ccc
    margin 1em 0
    padding 0

img
    vertical-align middle

fieldset
    border 0
    margin 0
    padding 0

textarea
    resize vertical

.chromeframe
    margin 0.2em 0
    background #ccc
    color #000
    padding 0.2em 0

/* ---------------------------- *\
    
    $Author's custom $Styles

\*----------------------------- */

body
    font-weight 400
 
/* Declarating general styles for p and h$ */
p
    font-size(16)
h1, h2, h3, h4, h5, h6, p
    margin-top 0
h1, .alpha
    font-size(27)
h2, .beta
    font-size(24)
h3, .gamma
    font-size(21)
h4, .delta
    font-size(18)
h5, .epsilon
    font-size(15)
h6, .zeta
    font-size(12)
strong
    font-weight 700

.wrapper
    width 100%
    margin 0 auto
    max-width 1280px
    position relative
      
.row
    width 100%
      
.half
    width 50%

.left
    float left

.right
    float right

.align
    width 100%
    height 100%
    display table
    > div
        display table-cell
        vertical-align middle

.flex
    display flex
    flex-wrap wrap
    &.no-wrap > .post
        width 100%

.flex-centering
    centerFlexbox(true,true)

.nondisplayed
    display none

.hidden
    opacity 0
    visibility hidden
    transition opacity .3s ease-out, visibility .3s ease-out

.shown
    opacity 1
    visibility visible
    transition opacity .3s ease-out, visibility .3s ease-out

.clearfix
    clearfix()

/* Predefined styles for post and page images (floats and margins) */
img
    &.alignright 
        float right
        margin 0 0 1em 1em
    &.alignleft 
        float left 
        margin 0 1em 1em 0
    &.aligncenter 
        display block
        margin-left auto
        margin-right auto
        padding 10px
    a &
        &.alignright
            float right
            margin 0 0 1em 1em
    a &
        &.alignleft
            float left
            margin 0 1em 1em 0
    a &
        &.aligncenter
            display block
            margin-left auto
            margin-right auto

@media (min-width: unit(1181/16, em))
    /* $min-width: $1181px */
    
    .section
        padding-top 3em
        padding-bottom 3em
        &--px
            padding-top 48px
            padding-bottom 48px

    .space
        padding-left 3em
        padding-right 3em
        &--px
            padding-left 48px
            padding-right 48px

@media (min-width: unit(768/16, em)) and (max-width: unit(1180/16, em))
    /* $min-width: $768px / $max-width: $1180px */
    
    .section
        padding-top 2em
        padding-bottom 2em
        &--px
            padding-top 32px
            padding-bottom 32px

    .space
        padding-left 2em
        padding-right 2em
        &--px
            padding-left 32px
            padding-right 32px

@media (max-width: unit(767/16, em))
    /* $max-width: $767px */
    
    .section
        padding-top 1.5em
        padding-bottom 1.5em
        &--px
            padding-top 24px
            padding-bottom 24px

    .space
        padding-left 1em
        padding-right 1em
        &--px
            padding-left 16px
            padding-right 16px